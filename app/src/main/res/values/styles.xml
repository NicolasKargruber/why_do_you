<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:checkable">true</item>
        <item name="android:checked">false</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:backgroundTint">@color/number_btn_bg_tint_selector</item>
        <item name="shapeAppearance">@style/ShapeAppearance.NumberButton</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="ShapeAppearance.NumberButton" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
    </style>
    <style name="ShapeAppearanceOverlay.NumberButton.TopLeft" parent="">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/number_button_corner_radius</item>
    </style>
    <style name="ShapeAppearanceOverlay.NumberButton.TopRight" parent="">
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopRight">@dimen/number_button_corner_radius</item>
    </style>
    <style name="ShapeAppearanceOverlay.NumberButton.BottomLeft" parent="">
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerSizeBottomLeft">@dimen/number_button_corner_radius</item>
    </style>
    <style name="ShapeAppearanceOverlay.NumberButton.BottomRight" parent="">
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeBottomRight">@dimen/number_button_corner_radius</item>
    </style>

    <style name="MyMaterialCard" parent="Widget.MaterialComponents.CardView">
        <item name="strokeColor">@color/checked_mat_card_stroke_color_selector</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="elevation">4dp</item>
        <item name="android:clickable">true</item>
        <item name="android:checkable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_marginHorizontal">@dimen/space_small</item>
    </style>

</resources>